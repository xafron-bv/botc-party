name: Project Agent Rules
description: Enforce AGENTS.md workflow for background AI agents in Cursor.
version: 1

env:
  server_port: 8080
  test_port: 5173

steps:
  - id: start_local_server
    when: always
    run: npx --yes http-server -p {{server_port}} -c-1 . > /dev/null 2>&1 & echo $! > /tmp/http-server.pid

  - id: tdd_guideline
    when: always
    run: echo "TDD: Start by writing a failing Cypress test for any feature/bugfix, then implement to pass."

  - id: run_tests
    when: pre-commit
    run: npx --yes http-server -p {{test_port}} -c- . > /dev/null 2>&1 & CYPRESS_BASE_URL=http://127.0.0.1:{{test_port}} npx --yes cypress run --config-file tests/cypress.config.js ; kill %1 || true

  - id: eslint_fix
    when: pre-commit
    run: npx eslint --fix

  - id: commit_message_guideline
    when: pre-commit
    run: echo "Commits: Use Conventional Commits with subject < 80 chars."

  - id: run_tests_pre_push
    when: pre-push
    run: npx --yes http-server -p {{test_port}} -c- . > /dev/null 2>&1 & CYPRESS_BASE_URL=http://127.0.0.1:{{test_port}} npx --yes cypress run --config-file tests/cypress.config.js ; kill %1 || true

  - id: require_green_tests
    when: pre-commit
    run: echo "Require: Do not commit/push if tests fail. Fix and re-run until green."
